function maschinen_template($template){
      global $post;
    $chooser = sub_or_single();

    if ( $chooser == "sub" ) {
    $template = get_stylesheet_directory() . '/page-mietpark-sub.php';
  } elseif ( $chooser == "single" ) {
    $template = get_stylesheet_directory() . '/page-mietpark-single.php';
  }
      return $template;
  }
